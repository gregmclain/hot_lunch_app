<%= form_for @menu, html: {class: "form-horizontal"} do |f| %>
    <fieldset id="menu-items">
      <ol>
        <%= f.fields_for :menu_items do |menu_item| %>
            <%= render 'menu_item_fields', f: menu_item %>
        <% end %>
      </ol>
      <%= link_to_add_association 'add item', f, :menu_items, 'data-association-insertion-node' => "#menu-items ol", 'data-association-insertion-method' => "append", :wrap_object => Proc.new {|menu_item| menu_item.build_item; menu_item } %>
    </fieldset>

    <%= f.submit %>
<% end %>