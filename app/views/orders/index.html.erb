<p id="notice"><%= notice %></p>

<h1>Listing Orders for <%= @student.first_name %></h1>

<table>
  <thead>
  <tr>
    <th>Date</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_date %></td>
        <td><%= link_to 'Show', student_order_path(@student, order) %></td>
        <td><%= link_to 'Edit', edit_student_order_path(@student, order) %></td>
        <td><%= link_to 'Destroy', [@student, order], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_student_order_path(@student) %>
